<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <nav class="navbar navbar-inverse">
      <div class="container">
          <!-- 2.ヘッダ情報 -->
          <div class="navbar-header">
              <h2 class="nav-title">Bookers</h2>
          </div>
          <!-- 3.リストの配置 -->
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <li class="list"><%=link_to "Home",user_path(current_user),class: "home" %></li>
              <li class="list"><%= link_to "Users",users_path,class: "users" %></li>
              <li class="list"><%= link_to "Books", books_path,class: "books" %></li>
              <li class="list"><%= link_to 'Log out', destroy_user_session_path,method: :delete,class: "logout" %></li>

            <% else %>
              <li class="list"><%=link_to "Home",root_path,class: "home" %></li>
              <li class="list"><%= link_to "About",home_about_path,class: "about" %></li>
              <li class="list"><%= link_to "Sign up", new_user_registration_path,class: "sign_up" %></li>
              <li class="list"><%= link_to "login", new_user_session_path,class: "sign_in" %>

            <% end%>
          </ul>
      </div>
    </nav>


<div class="container">
    <%= yield %>
    </div>
  </body>
</html>
