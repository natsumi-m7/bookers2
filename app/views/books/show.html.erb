

<div class="row">
	<div class="col-lg-4" >
		<% if flash[:notice] %>
	      <div class="flash">
	        <%= flash[:notice] %>
	      </div>
    	<% end %>
		<%= render 'users/side', user:@books.user, book:@book %>
	</div>
	<div class="col-lg-8">
		<h1>Book detail</h1>
		<table class="table table-striped">

				<tr>
					<td><%= attachment_image_tag @books.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
						<div><%= link_to @books.user.name,user_path(@books.user.id),class: "user_#{@books.user.id}" %></div>
					</td>
		    		<td><%= @books.title %></td>
		    		<td><%= @books.body %></td>
		    		<% if @books.user == current_user %>
		    		<td><%=link_to "Edit",edit_book_path(@books.id),class: "edit_book_#{@books.id}"%></td>
		    		<td><%=link_to "Destroy",destroy_book_path(@books.id),method: :delete,"data-confirm" => "本当に削除しますか？",class: "destroy_book_#{@books.id}" %></td>
		    		<% end %>
		  		</tr>
		</table>

	</div>
</div>