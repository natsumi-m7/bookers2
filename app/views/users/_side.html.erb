<div class ="sidebar">
	
	<h1>User info</h1>
		<%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>

	<p>name       <%= user.username %></p>
	<p>introduction <%= user.introduction %> </p>
	<%= link_to edit_user_path(user.id), class: 'btn btn-default' do %>
	<i class ="glyphicon glyphicon-wrench"></i>
	<% end %>
	<div class="new-book">
		<h1>New book</h1>
			<%= form_for(book) do |f| %>
			<% if book.errors.any? %>
	        <%= book.errors.count %>件のエラーが発生しました
	        <% book.errors.full_messages.each do |message| %>
	            <%= message %>
	        <% end %>
	        <% end %>

		    <h5>Title</h5>
		    <%= f.text_field :title,class: "book_title",size: "20x10", class: "form-control" %>

		    <h5>Opinion</h5>
		    <%= f.text_area :body,class: "book_body",size: "20x2", class: "form-control" %>
		 	<div class = "submit-btn" >
		    	<%= f.submit 'Create Book',class: 'btn btn-primary btn-block' %>
		<% end %>
	
	</div>
</div>
</div>
